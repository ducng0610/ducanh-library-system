<%= form_with(model: class_room) do |form| %>
<% if class_room.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(class_room.errors.count, "error") %> prohibited this class_room from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% class_room.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :available, class: label_class %>
          <%= form.check_box :available, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :start_time, class: label_class %>
          <%= form.datetime_field :start_time, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :student_number, class: label_class %>
          <%= form.number_field :student_number, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if class_room.persisted? %>
<%= link_to "Cancel", class_room, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", class_rooms_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
